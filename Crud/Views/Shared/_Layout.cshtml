@using System.Web.Optimization

<!DOCTYPE html>
<html data-ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud</title>
    @Styles.Render("~/Styles/app-css")
</head>
<body data-ng-controller="UsuarioController as usuarios">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button"
                        class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#menuUsuario">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Crud</a>
            </div>

            <div class="collapse navbar-collapse" id="menuUsuario">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="javascript:;">Usuario</a></li>
                    <li>
                        <a href="/">
                            <span class="fa fa-power-off"></span>
                            <span>Sair</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container container-body" style="padding-top : 25px;">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container text-center">
            <p class="text-muted">Joerlan</p>
        </div>
    </footer>

    @Scripts.Render("~/Scripts/app-js")
    @RenderSection("scripts", required: false)
</body>
</html>
